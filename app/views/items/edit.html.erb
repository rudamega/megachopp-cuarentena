<div class="row justify-content-center">
  <div class="col-6">
    <h3 class="text-center"> Crear nuevo producto</h3>
    <%= simple_form_for(@item) do |t| %>
      <%= t.input :name,label: 'Nombre del producto'%>
      <%= t.input :description,label: 'Description de factura'%>
      <%= t.input :cost_price, label: 'precio de Costo'%>
      <%= t.input :sales_prices, label: 'precio de Venta'%>
      <%= t.submit%>
    <% end %>
    <%= link_to 'Back', "#", class: "btn btn-outline-secondary" %>
  </div>
</div>
