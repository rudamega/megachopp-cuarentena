<div class="row justify-content-center">
  <div class="col-6">
    <h3 class="text-center"> Crear nuevo pedido</h3>
    <%= simple_form_for(@cart) do |t| %>
      <%= t.input :date, as: :string, input_html: { id: 'fecha' }, label: 'Fecha de evento'%>
      <%= t.submit "Crear nuevo pedido"%>
    <% end %>
    <%= link_to 'Back', "#", class: "btn btn-outline-secondary" %>
  </div>
</div>
