<div class="text-center">
  <button class=" btn btn-success"> Cargar Pedido</button>
</div>
<div class="tab-pane fade show" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg">
      <div style="overflow-x:auto;">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">Fecha</th>
              <th scope="col">Cliente</th>
              <th scope="col">Facturar A</th>
              <th scope="col">Productos</th>
              <th scope="col">Consignacion</th>
              <th scope="col">Telefono</th>
              <th scope="col">Telefono</th>
              <th scope="col">Telefono</th>
              <th scope="col">Telefono</th>
              <th scope="col">Telefono</th>
            </tr>
          </thead>
          <tbody>
            <%@carts.each do |carts|%>
            <tr>
              <th scope="row" class="lista"><%= carts.date %></th>
                <td><%= carts.cliente %></td>
                <td><%= carts.razon_social%></td>
                <td>
                  <ul>
                  <%carts.cart_items.where(status: "added").each do |items|%>
                    <li class="lista"> <%= items.quantity %> x <%= items.item.description %></li>
                  <% end %>
                  </ul>
                </td>
                <td>
                  <ul>
                  <%carts.cart_items.where(status: "consignacion").each do |items|%>
                    <li class="lista"> <%= items.quantity %> x <%= items.item.description %></li>
                  <% end %>
                  </ul>
                </td>
                <td><%= carts.tel %></td>
                <td><%= carts.email %></td>
                <td></td>
                <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
</div>
</div>
</div>


