<h2 class="text-center">Facturar</h2>
<div class="container">
  <%= simple_form_for [@cart, @factura] do |f| %>
    <div class="form-inputs">
      <%= f.input :condicion, collection: ['Credito','Contado']%>
      <%= f.input :total%>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "Guardar", class: "btn btn-primary", data: {confirm: "Deseas confirmar esta operacion??"} %>
    </div>
  <% end %>
</div>

