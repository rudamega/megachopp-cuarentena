        <% end %>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-around">
  <%= link_to "Confirmado", cart_cart_confirmado_path(@cart), class: "btn btn-success" %>
</div>
