<div class="row justify-content-center">
  <div class="col-6">
    <h3 class="text-center"> Editar</h3>
    <%= simple_form_for(@item) do |t| %>
      <%= t.input :quantity, label: 'Cantidad'%>
      <%= t.input :price, label: 'Precio'%>
      <%= t.submit "Modificar"%>
    <% end %>
    <%= link_to 'Atras', :back, class: "btn btn-outline-secondary" %>
  </div>
</div>
