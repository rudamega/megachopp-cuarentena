<h2 class="text-center">Editar datos</h2>
<div class="text-center m-2">
</div>
<div class="container">
  <%= simple_form_for(@cliente) do |f| %>
    <div class="form-inputs">
      <%= f.input :name, label: "Nombre (encargado)", required: true%>
      <%= f.input :razon_social, label: "Razon Social", required: true%>
      <%= f.input :ruc, label: "Ci o Ruc", required: true%>
      <%= f.input :tel, label: "Nro de telefono", required: true%>
      <%= f.input :email, label:" Correo"%>
      <%= f.input :date, start_year: Time.now.year - 100,
        end_year: Time.now.year - 18,
        order: %i(day month year), label: "Fecha de nacimiento", required: true%>
      <%= f.input :name2, label: "En caso de no contactar", required: true%>
      <%= f.input :tel2, label: "Tel 2 ", required: true%>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "Actualizar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


